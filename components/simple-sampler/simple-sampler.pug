        //-     wavesurfer.play();
        //- });

        // Play/pause
        document.querySelector('.btn-primary.#{component_id_tag}').addEventListener('click', () => {
            wavesurfer.playPause();
        });

        wavesurfer.on('ready', () => {
            wavesurfer.play();
        });

        wavesurfer.on('interaction', () => {
            wavesurfer.playPause();
        });
